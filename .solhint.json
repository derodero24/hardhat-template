{
  "extends": "solhint:recommended",
  "rules": {
    "compiler-version": [
      "warn",
      "^0.8.17"
    ],
    "quotes": [
      "warn",
      "single"
    ],
    "func-visibility": [
      "warn",
      {
        "ignoreConstructors": true
      }
    ],
    "reason-string": [
      "warn",
      {
        "maxLength": 64
      }
    ],
    "not-rely-on-time": "off"
  }
}
