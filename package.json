{
  "name": "hardhat-template",
  "scripts": {
    "accounts": "npx hardhat accounts",
    "clean": "npx hardhat clean",
    "compile": "npx hardhat compile",
    "coverage": "npx hardhat coverage",
    "deploy": "npx hardhat run scripts/deploy.ts --network localhost",
    "deploy:goerli": "npx hardhat run scripts/deploy.ts --network goerli",
    "node": "npx hardhat node",
    "test": "npx hardhat test",
    "verify:goerli": "npx hardhat verify --network goerli --constructor-args scripts/arguments.ts $npm_config_address"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^1.0.2",
    "@openzeppelin/contracts": "^4.8.1",
    "@tsconfig/strictest": "^1.0.2",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-unused-imports": "^2.0.0",
    "hardhat": "^2.12.7",
    "typescript": "^4.9.5"
  }
}
